@model Player

@{
    ViewBag.Title = $"Edit {Model.Name} Player";
}

@functions {
    string GetDeleteModalId(int playerId)
    {
        return "#deleteModal" + playerId;
    }

    string GetModalId(int playerId)
    {
        return "deleteModal" + playerId;
    }
}

<h3>Edit Player</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PlayerId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />       
        <a asp-action="Index" class="btn btn-default">Back to List</a>
    </div>
</form>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PlayerId" />
    

    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(Model.PlayerId)">
        <i class="bi bi-trash">Delete</i>
    </button>

    <div class="modal fade" id="@GetModalId(Model.PlayerId)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete player?</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Delete"></button>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</form>