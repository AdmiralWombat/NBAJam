@model PlayerViewModel

<style>
    .player-form-container {
        border: 2px solid #ccc; /* Light gray border */
        padding: 20px; /* Add some padding inside the frame */
        border-radius: 5px; /* Rounded corners (optional) */
        margin-bottom: 20px; /* Space below the form */
    }

    .player-form-title {
        text-align: center; /* Center the title */
        margin-bottom: 10px; /* Space below the title */
        font-size: 1.2em; /* Slightly larger font for the title */
        font-weight: bold; /* Make the title bold */
    }

</style>

<div class="row">
    <div class="col-md-4">
        <div class="player-form-container">
            <h3 class="player-form-title">Add Player</h3>
            <form asp-action="Create" asp-controller="Player" method="post">
                <input type="hidden" name="playerPage" value="@Model.ReturnToPlayerPage.ToString()" />
                <div class="form-group">
                    <label asp-for="Player.Name"></label>
                    <input asp-for="Player.Name" class="form-control" />
                    <span asp-validation-for="Player.Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>                
            </form>

        </div>
    </div>

</div>